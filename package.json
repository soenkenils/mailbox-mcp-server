{
  "name": "mailbox-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for mailbox.org email, calendar, and contacts integration",
  "main": "dist/main.js",
  "bin": {
    "mailbox-mcp-server": "dist/main.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun run tsx watch src/main.ts",
    "build": "bun run tsc",
    "start": "node dist/main.js",
    "test": "bun run vitest --run",
    "test:watch": "bun run vitest --watch",
    "test:coverage": "bun run vitest --coverage",
    "format": "bun run biome format --write src/ tests/",
    "lint": "bun run biome lint src/ tests/",
    "check": "bun run biome check --write src/ tests/"
  },
  "keywords": [
    "mcp",
    "mailbox.org",
    "email",
    "calendar",
    "contacts",
    "claude",
    "anthropic"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "SÃ¶nke",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/dotenv": "^6.1.1",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^22.17.0",
    "@types/node-fetch": "^2.6.13",
    "dotenv": "^16.6.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@types/nodemailer": "^6.4.17",
    "dayjs": "^1.11.13",
    "ical.js": "^2.2.0",
    "imapflow": "^1.0.193",
    "mailparser": "^3.7.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "tsdav": "^2.1.5",
    "valibot": "^1.1.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
