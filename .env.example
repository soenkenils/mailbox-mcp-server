# Mailbox.org MCP Server Configuration

# Required: Your mailbox.org credentials
MAILBOX_EMAIL=your-email@mailbox.org
MAILBOX_PASSWORD=your-app-password

# Optional: IMAP configuration (defaults shown)
MAILBOX_IMAP_HOST=imap.mailbox.org
MAILBOX_IMAP_PORT=993
MAILBOX_IMAP_SECURE=true

# Optional: CalDAV configuration (defaults shown) 
MAILBOX_CALDAV_URL=https://dav.mailbox.org/

# Optional: Specific calendars to access (comma-separated)
# MAILBOX_CALENDARS=personal,work,family

# Optional: Cache TTL settings in milliseconds (defaults shown)
CACHE_EMAIL_SEARCH_TTL=300000
CACHE_EMAIL_MESSAGE_TTL=600000
CACHE_EMAIL_THREAD_TTL=300000
CACHE_CALENDAR_EVENTS_TTL=900000
CACHE_CALENDAR_FREEBUSY_TTL=300000

# Optional: Cache size and cleanup settings
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=300000

# Optional: Enable debug logging
DEBUG=false